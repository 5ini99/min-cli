{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "typeRoots": [
      "./types/*.d.ts"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es6",
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "es2016", "es5"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "**/*.spec.js"
  ]
}
